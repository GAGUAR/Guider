<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="false"
    android:orientation="vertical">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:context=".MapsActivity" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/gpscenter"
            android:layout_margin="8dp"
            android:layout_above="@+id/progbar1"
            android:layout_alignRight="@id/map"
            android:background="@drawable/gpscenter" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progbar1"
            android:layout_above="@+id/buttonlayout"
            android:layout_alignRight="@+id/map">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:indeterminate="true" />
    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/map"
            android:id="@+id/buttonlayout"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
            <Button
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/mainbuttons"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:onClick="stopService"
                android:text="@string/finish"
                android:textColor="@android:color/white"
                android:textSize="17dp" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/exitColor"
            android:id="@+id/exitlout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/exitshape"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textcross"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/suretxt"
                    android:textAlignment="center"
                    android:background="@drawable/textback"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:text="@string/iziet"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/exitbutton"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/cross" />
                </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/patiziet"
                    android:textAlignment="center"
                    android:textSize="15dp"
                    android:padding="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/mainbuttons"
                    android:onClick="startService"
                    android:text="@string/ja"
                    android:textColor="@android:color/white"
                    android:textSize="17dp" />
                <Button
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/mainbuttons"
                    android:onClick="startService"
                    android:text="@string/ne"
                    android:textColor="@android:color/white"
                    android:textSize="17dp" />
            </LinearLayout>
            </LinearLayout>
            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/exitColor"
            android:id="@+id/loadinglout"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/exitshape"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/loadingPanel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/progbar"

                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="true" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/progbar"
                    android:textAlignment="center"
                    android:text="@string/init"
                    tools:ignore="NotSibling" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>





</LinearLayout>


